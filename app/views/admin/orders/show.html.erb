<div class="container">
  <div class="row mb-5">
    <div class="col-md-4 text-center">
      <b class="mb-3"><%= @order.customer.last_name %> <%= @order.customer.first_name %>さんの注文履歴</b>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>  
</div>