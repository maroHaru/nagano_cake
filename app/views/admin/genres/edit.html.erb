<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-5">
      <h5 class="mb-4">ジャンル編集</h5>
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <h6>ジャンル名</h6>
        <div class="field">
          <label for="inputGenre" class="form-label"></label>
          <%= f.text_field :name, autofocus: true, id:"inputGenre", placeholder:"ジャンル", class: "form-control" %>
        </div>

        <div class="col-sm-4 text-center mt-4">
          <%= f.submit "変更を保存", class: "btn btn-md btn-success" %>
        </div>
      <% end %>
    </div>
    </div class="col-md-2"></div>
  </div>
</div>