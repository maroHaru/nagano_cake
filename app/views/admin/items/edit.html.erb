<div class="container">
  <h5 class="mb-3">商品編集</h5>
  <div class="row">
    <div class="col-md-4 text-center">

    </div>

    <div class="col-md-8 offset-md-1">
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
      <table class="table table">
        <tr>
          <th class="col-md-1 text-left">商品画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th class="col-md-3 text-left"><label for="inputName" class="form-label">商品名</label></th>
          <td>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名", class: "form-control" %></td>
        </tr>
        <tr>
          <th class="col-md-3 text-left"><label for="inputIntroduction" class="form-label">商品説明</label></th>
          <td>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"ここに説明分を記述します", size: "20x5" %></td>
        </tr>
        <tr>
          <th class="col-md-3 text-left">ジャンル</th>
          <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
        </tr>
        <tr>
          <th class="col-md-3 text-left"><label for="inputPrice" class="form-label">税抜価格</label></th>
          <td>
            <%= f.number_field :price, autofocus: true, id:"inputPrice", placeholder:"税抜価格", class: "form-control" %>円</td>
        </tr>
        <tr>
          <th class="col-md-3 text-left">販売ステータス</th>
          <td>
            <%= f.radio_button :is_active, :true %><%= f.label :is_active, "販売中", value: :true %>
            <%= f.radio_button :is_active, :false %><%= f.label :is_active, "販売停止中", value: :false %>
　　　　　</td>
        </tr>
      </table>
       　<%= f.submit '変更を保存', class: "btn btn-md btn-success" %>
      <% end %>
    </div>
  </div>
</div>