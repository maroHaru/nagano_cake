<div class="container">
  <div class="row mb-5">
    <div class="col-md-4 text-center">
      <b class="mb-3"><%= @customer.full_name %>さんの会員情報編集</b>
    </div>
  </div>
  <div class="row md-8">
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <tr>
          <th>氏名</th>
          <td><label for="inputName" class="form-label"></label>
              <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"姓" %></td>
          <td><label for="inputFirstName" class="form-label"></label>
              <%= f.text_field :first_name, autofocus: true, id:"inputFirstName", placeholder:"名" %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><label for="inputNameKana" class="form-label"></label>
              <%= f.text_field :last_name_kana, autofocus: true, id:"inputNameKana", placeholder:"(セイ)" %></td>
          <td><label for="inputFirstNameKana" class="form-label"></label>
              <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirstNameKana", placeholder:"名" %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><label for="inputPostalCode" class="form-label"></label>
              <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder:"郵便番号" %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><label for="inputAddress" class="form-label"></label>
              <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所" %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><label for="inputTelephone" class="form-label"></label>
              <%= f.telephone_field :telephone_number, autofocus: true, id:"inputTelephone", placeholder:"電話番号" %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><label for="inputEmail" class="form-label"></label>
              <%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><%= f.radio_button :is_deleted, :false %>
          　　<%= f.label :is_deleted, "有効", value: :false %>
          　　<%= f.radio_button :is_deleted, :true %>
          　　<%= f.label :is_deleted, "退会", value: :true %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-5 text-center mr-2">
      <%= link_to "変更を保存", admin_customer_path(@customer.id), class: "btn btn-sm btn-success" %>
    </div>
  </div>
</div>