<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body  class="d-flex flex-column vh-100">
    <header class="border-bottom">
      <nav class="navbar navbar-expand-lg navbar-light list-unstyled">
        <div class="container">
          <%= link_to "ながのCAKE", root_path, class: "btn btn-md rounded-pill" %>
          <% if customer_signed_in? %>
            <li>
              <%= link_to "マイページ", customers_my_page_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "商品一覧", items_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "カート", cart_items_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-light border" %>
            </li>
          <% elsif admin_signed_in? %>
            <li>
              <%= link_to "商品一覧", admin_items_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "会員一覧", admin_customers_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "注文履歴一覧", admin_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-light border" %>
            </li>
          <% else %>
            <li>
              <%= link_to "ログイン", new_admin_session_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "About", about_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "商品一覧", items_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-light border" %>
            </li>
            <li>
              <%= link_to "顧客ログイン", new_customer_session_path, class: "btn btn-light border" %>
            </li>
          <% end %>
        </div>
      </nav>
    </header>
    <main class="mb-auto mt-5">
    <%= yield %>
    </main>
    <footer class="border-top h-100">
      <div class="container">
        <div class="row">
          <div class="mx-auto">
             <p></p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
