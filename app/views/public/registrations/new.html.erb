<h4>新規会員登録</h4>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <h6>名前</h6>
  <div class="field">
    <%= f.label :name, '(姓)' %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :name, '(名)' %>
    <%= f.text_field :first_name %>
  </div>

  <h6>フリガナ</h6>
  <div class="field">
    <%= f.label :name, '(セイ)' %>
    <%= f.text_field :last_name_kana %>
  </div>
  <div class="field">
    <%= f.label :name, '(メイ)' %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <h6>郵便番号(ハイフンなし)</h6>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <h6>住所</h6>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <h6>電話番号(ハイフンなし)</h6>
    <%= f.telephone_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
