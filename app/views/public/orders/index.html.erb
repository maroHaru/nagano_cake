<div class="container">
  <div class="row">
    <div class="col-md-4 text-center">
      <h5 class="mb-3">注文履歴一覧</h5>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-secondary">注文日</th>
            <th class="table-secondary">配送先</th>
            <th class="table-secondary">注文商品</th>
            <th class="table-secondary">支払金額</th>
            <th class="table-secondary">ステータス</th>
            <th class="table-secondary">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>〒<%= order.postal_code %></br>
                  <%= order.address %></br>
                  <%= order.name %></td>
              <td><% order.items.each do |item| %>
                  <p><%= item.name %></p>
                  <% end %></td>
              <td><%= order.total_payment %>円</td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to '表示する', order_path(order), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>