<div class="container">
  <div class="row">
    <div class="col-md-4 text-center">
      <h5 class="mb-3">注文情報確認</h5>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.subtotal %></td>
              <td><% @total += cart_item.subtotal %></td>
            </tr>           
          <% end %>
        </tbody>
      </table>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-4">
      <b>支払方法</b>
      <%= @order.payment_method_i18n %>
      </br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <b>お届け先</b>
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </div>
  </div>
</div>