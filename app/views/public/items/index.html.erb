<div class="container">
  <h5 class="mb-3">商品一覧</h5>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
      <%= link_to image_tag(item.get_image), item_path(item.id) %>
      <b>商品名</b>
      <%= item.name %>
      ¥<%= item.price %>
      </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>