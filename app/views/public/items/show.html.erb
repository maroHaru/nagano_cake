<div class="container">
  <div class="row">
    <div class="col-lg-2">
    </div>
   <div class="col-lg-4">
     <%= image_tag @item.get_image, size: "250x250" %>
   </div>
   <div class="col-lg-6">
     <b><%= @item.name %></b></br>
     <%= @item.introduction %></br>
     <b>¥<%= @item.with_tax_price %>(税込)</b></br>
     <% if customer_signed_in? %>
       <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
     　  <%= f.hidden_field :item_id, :value => @item.id  %>
         <%= f.select :amount, *[1..10] %>
         <%= f.submit 'カートに入れる', class: "btn btn-md btn-success" %>
       <% end %>
     <% end %>
    </div>
  </div>
</div>