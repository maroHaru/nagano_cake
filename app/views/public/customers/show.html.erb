<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

      <h5 class="mb-4">マイページ</h5>
      <h5>登録情報</h5>
      <%= link_to '編集する', customers_information_edit_path(@customer), class: "btn btn-success mb-4" %>

      <div class="table-responsive">
        <table class="table table-bordered">
          <tr>
            <th class="table-secondary w-25">氏名</th>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th class="table-secondary">カナ</th>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th class="table-secondary">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="table-secondary">住所</th>
            <td><%= @customer.address %></td>
          </tr>
           <tr>
            <th class="table-secondary">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
           <tr>
            <th class="table-secondary">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="col-md-6 text-center">
        <b>配送先</b>
        <%= link_to '一覧を見る', addresses_path, class: "btn btn-primary ml-2" %>
    </div>
    </div class="col-md-2"></div>
  </div>
</div>



