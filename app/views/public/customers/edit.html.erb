<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

      <h5 class="mb-4">会員情報編集</h5>
      <%= form_with model: @customer, url: customers_my_page_path(@customer) do |f| %>

        <h6>氏名</h6>
        <div class="field">
         <label for="inputName" class="form-label"></label>
         <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
        </div>

      <% end %>
    </div>
    </div class="col-md-2"></div>
  </div>
</div>

