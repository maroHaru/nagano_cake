<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

      <h5 class="mb-4">会員情報編集</h5>
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <table class="table">
          <tr>
            <th>氏名</th>
            <td>
              <div class="field">
                <label for="inputName" class="form-label"></label>
                <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"姓", class: "form-control" %>
              </div>
            </td>
            <td>
              <div class="field">
                <label for="inputFirstName" class="form-label"></label>
                <%= f.text_field :first_name, autofocus: true, id:"inputFirstName", placeholder:"名", class: "form-control" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <div class="field">
                <label for="inputNameKana" class="form-label"></label>
                <%= f.text_field :last_name_kana, autofocus: true, id:"inputNameKana", placeholder:"(セイ)", class: "form-control" %>
              </div>
            </td>
            <td>
              <div class="field">
                <label for="inputFirstNameKana" class="form-label"></label>
                <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirstNameKana", placeholder:"名", class: "form-control" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td>
              <div class="field">
                <label for="inputPostalCode" class="form-label"></label>
                <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder:"郵便番号", class: "form-control" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>住所</th>
            <td>
              <div class="field">
                <label for="inputAddress" class="form-label"></label>
                <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所", class: "form-control" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td>
              <div class="field">
                <label for="inputTelephone" class="form-label"></label>
                <%= f.telephone_field :telephone_number, autofocus: true, id:"inputTelephone", placeholder:"電話番号", class: "form-control" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <div class="field">
                <label for="inputEmail" class="form-label"></label>
                <%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス", class: "form-control" %>
              </div>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "編集内容を保存", class: "btn btn-md btn-success" %></td>
            <td><%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-sm btn-danger" %></td>
          </tr>
        </table>
      <% end %>
    </div>
    </div class="col-md-2"></div>
  </div>
</div>

